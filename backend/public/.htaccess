<IfModule mod_rewrite.c>
    RewriteEngine On

    # Установим базовый путь, если ты не в корне
    RewriteBase /project/train%20skills/backend/public/

    # Если файл или папка существует — не трогаем
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Всё остальное отправляем в index.php
    RewriteRule ^ index.php [QSA,L]
</IfModule>
